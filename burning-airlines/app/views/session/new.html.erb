<h2>Login</h2>

<% if flash[:error].present? %>
    <p><strong><%= flash[:error] %></strong></p>
<% end %>

<div class="form-group" class='login_container'>
    <%= form_tag login_path do %>
        <div id='login_email'>
            <%= label_tag 'Email' %>
            <%= email_field_tag :email, nil %>
        </div>
        <div id='login_password'>
            <%= label_tag 'Password' %>
            <%= password_field_tag :password, nil %>
        </div>
        <div id='login_submit'>
            <%= submit_tag 'Login' %>
        </div>
    <% end %>
</div>
